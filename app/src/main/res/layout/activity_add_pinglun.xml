<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.jcodecraeer.xrecyclerview.XRecyclerView
                android:id="@+id/fbQzXrec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.jcodecraeer.xrecyclerview.XRecyclerView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:padding="20dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="#ddd"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/fbPingYu"
                        android:textSize="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="请在此写下你对商品的评价"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/fbSim"
                    android:layout_marginLeft="14dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/ic_launcher_background"/>

                <RelativeLayout
                    android:id="@+id/fbPhoto"
                    android:layout_toRightOf="@+id/fbSim"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"></RelativeLayout>
            </RelativeLayout>


            <CheckBox
                android:id="@+id/fbTbCheck"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="同步到圈子"/>

            <Button
                android:id="@+id/fbButton"
                android:layout_width="@dimen/dp_200"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_15"
                android:background="#f00"
                android:text="发布"
                android:textColor="#fff"/>
        </LinearLayout>
    </ScrollView>




</LinearLayout>
