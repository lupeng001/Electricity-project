<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="20dp"
    android:layout_marginLeft="@dimen/dp_12"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView

        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100">
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:id="@+id/address_name"
                    android:textColor="#666666"
                    android:text="sss"
                    />
                <TextView
                    android:id="@+id/address_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text="sss"
                    />

            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:id="@+id/address_address"
                android:textColor="#666666"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:text="sss"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_height="match_parent">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="默认地址"
                android:id="@+id/address_check"
                android:layout_alignParentBottom="true"
                />
                <Button
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:background="#fff"
                android:textColor="#666666"
                android:text="修改"
                    android:id="@+id/address_update"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/address_check"
                android:layout_marginLeft="@dimen/dp_70"
                android:textSize="12sp"
                />
                <Button
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:background="#fff"
                    android:textColor="#666666"
                    android:text="删除"
                    android:id="@+id/address_delete"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@id/address_update"
                     android:layout_marginLeft="@dimen/dp_5"
                    android:textSize="12sp"
                    />
            </RelativeLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>
