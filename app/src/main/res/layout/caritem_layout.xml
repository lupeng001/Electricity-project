<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent">
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:layout_marginTop="30dp"
        android:id="@+id/caritem_check"

        />
<android.support.v7.widget.CardView
    android:layout_width="@dimen/dp_155"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="24dp"
    android:layout_marginTop="40dp"
    android:layout_height="@dimen/dp_35">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_marginTop="@dimen/dp_3"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@color/colorPrimaryDark"
            android:id="@+id/caritem_image"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginTop="@dimen/dp_3"
                android:id="@+id/caritem_name"
                android:layout_marginLeft="@dimen/dp_3"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#f00"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:layout_marginTop="@dimen/dp_5"
                    android:id="@+id/caritem_price"
                    />
                <util.MyView
                    android:layout_marginLeft="70dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/caritem_myview"
                    android:layout_marginRight="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/caritem_price"
                    ></util.MyView>
                    </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
</LinearLayout>
