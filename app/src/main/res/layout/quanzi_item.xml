<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_marginTop="44dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_8"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="@dimen/dp_25"
                    android:src="@color/colorPrimaryDark"
                    android:id="@+id/quanzi_touxiang"
                    android:layout_marginTop="10dp"
                    android:layout_height="@dimen/dp_25" />
                <TextView
                    android:layout_toRightOf="@id/quanzi_touxiang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:text="小白妞"
                    android:id="@+id/quanzi_name"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="6dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/quanzi_time"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginTop="10dp"
                    android:text="sss"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="sss"
                android:id="@+id/quanzitext"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:textColor="#666666"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                >
              <android.support.v7.widget.RecyclerView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/quanzi_recycler"
                  ></android.support.v7.widget.RecyclerView>
            </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <Button
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/quanziitem_zan"
        android:background="@drawable/dianzan"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        />
    <TextView
        android:layout_width="wrap_content"
        android:text="ss"
        android:id="@+id/quanziitem_count"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="16sp"
        android:textColor="#666666"
        />
</RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
